<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PossibleWeightLossEstimator.CreateUser"
             Title=" "
             BackgroundColor="WhiteSmoke">
    <VerticalStackLayout
        VerticalOptions="CenterAndExpand"
        HorizontalOptions="Center">
        <Label x:Name="DisplayMessage"
            Text=" "
            FontFamily="serif"
            TextColor="#26320c"
            HorizontalOptions="Center"
            VerticalOptions="Start"
            IsVisible="False"/>
        <Entry
            x:Name="BodyWeightEntry"
            FontFamily="serif"
TextColor="#26320c"
            Placeholder="Enter body weight in KG"
            VerticalOptions="Center" 
            HorizontalOptions="Center" 
            HorizontalTextAlignment="Center"/>
        <Button
            x:Name="CreateUserBtn"
            Text="Create user"
            FontFamily="serif"
TextColor="#26320c"
BorderColor="#26320c"
            Clicked="OnCreateUserClicked"
            VerticalOptions="Center" 
            HorizontalOptions="Center" 
            WidthRequest="150"
            HeightRequest="50"/>
    </VerticalStackLayout>
</ContentPage>