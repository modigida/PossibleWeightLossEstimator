<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PossibleWeightLossEstimator.MainPage"
             BackgroundColor="WhiteSmoke">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="10">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="55"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="55"/>
            </Grid.ColumnDefinitions>
            
            <Label 
                x:Name="DisplayMessage"
                Text="This is my DisplayMessage"
                FontSize="Medium"
                FontFamily="serif"
                TextColor="#26320c"
                Grid.Column="1"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                IsVisible="False"/>
            
            <Button 
                x:Name="EditUserBtn"
                Text="Edit"
                FontFamily="serif"
                TextColor="#26320c"
                BorderColor="#26320c"
                Clicked="OnEditUserClicked"
                Grid.Column="2"
                HorizontalOptions="End"
                WidthRequest="55"
                HeightRequest="50"/>

        </Grid>
        
        <VerticalStackLayout Grid.Row="1" VerticalOptions="CenterAndExpand">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <VerticalStackLayout Grid.Row="0">
                <Label 
                    x:Name="amountOfWeeksLabel"
                    Text="weeks"
                    HorizontalOptions="Center"
                    FontSize="Medium"
                    FontFamily="serif"
                    TextColor="#26320c"
                    Margin="0,0,0,40"/>

                <Grid ColumnDefinitions="*,*,*,*,*,*,*,*,*,*,*,*,*"
                HorizontalOptions="FillAndExpand"
                VerticalOptions="Center"
                Margin="0,0,0,80">

                    <BoxView WidthRequest="1"
                    HeightRequest="10"
                    Color="#26320c"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    Grid.Column="0"/>

                    <BoxView WidthRequest="1"
                    HeightRequest="10"
                    Color="#26320c"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    Grid.Column="1"/>

                    <BoxView WidthRequest="1"
                    HeightRequest="10"
                    Color="#26320c"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    Grid.Column="2"/>

                    <BoxView WidthRequest="1"
                    HeightRequest="10"
                    Color="#26320c"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    Grid.Column="3"/>

                    <BoxView WidthRequest="1"
                    HeightRequest="10"
                    Color="#26320c"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    Grid.Column="4"/>

                    <BoxView WidthRequest="1"
                    HeightRequest="10"
                    Color="#26320c"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    Grid.Column="5"/>

                    <BoxView WidthRequest="1"
                    HeightRequest="10"
                    Color="#26320c"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    Grid.Column="6"/>

                    <BoxView WidthRequest="1"
                    HeightRequest="10"
                    Color="#26320c"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    Grid.Column="7"/>

                    <BoxView WidthRequest="1"
                    HeightRequest="10"
                    Color="#26320c"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    Grid.Column="8"/>

                    <BoxView WidthRequest="1"
                    HeightRequest="10"
                    Color="#26320c"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    Grid.Column="9"/>

                    <BoxView WidthRequest="1"
                    HeightRequest="10"
                    Color="#26320c"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    Grid.Column="10"/>

                    <BoxView WidthRequest="1"
                    HeightRequest="10"
                    Color="#26320c"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    Grid.Column="11"/>

                    <BoxView WidthRequest="1"
                    HeightRequest="10"
                    Color="#26320c"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    Grid.Column="12"/>

                    <Slider x:Name="weekSlider"
                        Minimum="4"
                        Maximum="52"
                        Value="0"
                        ValueChanged="OnSliderWeekChanged"
                        Grid.ColumnSpan="13"
                        VerticalOptions="Center"
                        HorizontalOptions="Center"
                        MinimumTrackColor="#26320c"
                        ThumbColor="#26320c"
                        WidthRequest="365"/>
                </Grid>
                </VerticalStackLayout>

                <VerticalStackLayout Grid.Row="1">
                <Label 
                    x:Name="amountOfKgLabel"
                    Text="kg"
                    HorizontalOptions="Center"
                    FontSize="Medium"
                    FontFamily="serif"
                    TextColor="#26320c"
                    Margin="0,0,0,40"/>

                <Grid ColumnDefinitions="*,*,*,*,*,*,*,*,*,*,*,*,*"
                    HorizontalOptions="FillAndExpand"
                    VerticalOptions="Center"
                    Margin="0,0,0,80">

                    <BoxView WidthRequest="1"
                    HeightRequest="10"
                    Color="#26320c"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    Grid.Column="0"/>

                    <BoxView WidthRequest="1"
                    HeightRequest="10"
                    Color="#26320c"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    Grid.Column="1"/>

                    <BoxView WidthRequest="1"
                    HeightRequest="10"
                    Color="#26320c"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    Grid.Column="2"/>

                    <BoxView WidthRequest="1"
                    HeightRequest="10"
                    Color="#26320c"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    Grid.Column="3"/>

                    <BoxView WidthRequest="1"
                    HeightRequest="10"
                    Color="#26320c"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    Grid.Column="4"/>

                    <BoxView WidthRequest="1"
                    HeightRequest="10"
                    Color="#26320c"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    Grid.Column="5"/>

                    <BoxView WidthRequest="1"
                    HeightRequest="10"
                    Color="#26320c"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    Grid.Column="6"/>

                    <BoxView WidthRequest="1"
                    HeightRequest="10"
                    Color="#26320c"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    Grid.Column="7"/>

                    <BoxView WidthRequest="1"
                    HeightRequest="10"
                    Color="#26320c"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    Grid.Column="8"/>

                    <BoxView WidthRequest="1"
                    HeightRequest="10"
                    Color="#26320c"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    Grid.Column="9"/>

                    <BoxView WidthRequest="1"
                    HeightRequest="10"
                    Color="#26320c"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    Grid.Column="10"/>

                    <BoxView WidthRequest="1"
                    HeightRequest="10"
                    Color="#26320c"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    Grid.Column="11"/>

                        <BoxView WidthRequest="1"
                    HeightRequest="10"
                    Color="#26320c"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    Grid.Column="12"/>
                    
                        <Slider 
                            x:Name="kgSlider"
                            Minimum="0"
                            Maximum="30"
                            Value="0"
                            ValueChanged="OnSliderKgChanged"
                            Grid.ColumnSpan="13"
                            VerticalOptions="Center"
                            HorizontalOptions="Center"
                            ThumbColor="#26320c"
                            MinimumTrackColor="#26320c"
                            WidthRequest="365"/>
                    </Grid>
                    
                </VerticalStackLayout>

                <VerticalStackLayout Grid.Row="2">
                <Label 
                    x:Name="kcalLabel"
                    Text="calorie deficit level"
                    HorizontalOptions="Center"
                    FontSize="Medium"
                    FontFamily="serif"
                    TextColor="#26320c"
                    Margin="0,0,0,40"/>

                <Grid ColumnDefinitions="*,*,*"
                HorizontalOptions="FillAndExpand"
                VerticalOptions="Center"
                Margin="0,0,0,80">

                    <BoxView WidthRequest="1"
                    HeightRequest="10"
                    Color="#26320c"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    Grid.Column="0"/>

                    <BoxView WidthRequest="1"
                    HeightRequest="10"
                    Color="#26320c"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    Grid.Column="1"/>

                    <BoxView WidthRequest="1"
                    HeightRequest="10"
                    Color="#26320c"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    Grid.Column="2"/>

                    <Slider x:Name="deficitSlider"
                    Minimum="1"
                    Maximum="3"
                    Value="1"
                    ValueChanged="OnSliderDeficitChanged"
                    Grid.ColumnSpan="3"
                    VerticalOptions="Center"
                    WidthRequest="270"
                    MinimumTrackColor="#26320c"
                    ThumbColor="#26320c"/>
                    
                </Grid>
                </VerticalStackLayout>

                <VerticalStackLayout Grid.Row="3">
                    <Label
                        x:Name="targetWeightLabel"
                        Text="targetWeightLabel"
                        HorizontalOptions="Center"
                        FontSize="Medium"
                        FontFamily="serif"
                        TextColor="#26320c"
                        Margin="0,0,0,40"/>
                </VerticalStackLayout>

            </Grid>

        
        </VerticalStackLayout>

        <Button 
            x:Name="SaveSettingsBtn"
            Text="Save"
            FontFamily="serif"
            TextColor="#26320c"
            BorderColor="#26320c"
            Clicked="OnSaveSettingsClicked"
            VerticalOptions="End"
            HorizontalOptions="Center"
            WidthRequest="250"
            HeightRequest="50"
            Grid.Row="2"
            Margin="10"/>

    </Grid>
</ContentPage>
