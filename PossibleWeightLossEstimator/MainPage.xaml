                    Grid.Column="11"/>
                
                <BoxView WidthRequest="1"
                    HeightRequest="10"
                    Color="Gray"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    Grid.Column="12"/>
                
                <Label Text="30" 
                    FontSize="Medium"
                    HorizontalOptions="Center"
                    Grid.Column="12"
                    Margin="0,40,0,0"/>
                
                <Slider 
                    x:Name="kgSlider"
                    Minimum="0"
                    Maximum="30"
                    Value="0"
                    ValueChanged="OnSliderKgChanged"
                    Grid.ColumnSpan="13"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    MinimumTrackColor="#80AAAAAA"
                    ThumbColor="#26320c"
                    WidthRequest="365"/>
            </Grid>

            <Label Text="calorie deficit level"
                HorizontalOptions="Center"
                FontSize="Medium"
                FontFamily="serif"
                TextColor="#26320c"/>
            
            <Grid ColumnDefinitions="*,*,*"
                HorizontalOptions="FillAndExpand"
                VerticalOptions="Center">
                
                <BoxView WidthRequest="1"
                    HeightRequest="10"
                    Color="Gray"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    Grid.Column="0"/>
                
                <BoxView WidthRequest="1"
                    HeightRequest="10"
                    Color="Gray"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    Grid.Column="1"/>
                
                <BoxView WidthRequest="1"
                    HeightRequest="10"
                    Color="Gray"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    Grid.Column="2"/>
                
                <Slider x:Name="deficitSlider"
                    Minimum="1"
                    Maximum="3"
                    Value="1"
                    ValueChanged="OnSliderDeficitChanged"
                    Grid.ColumnSpan="3"
                    VerticalOptions="Center"
                    WidthRequest="270"
                    MinimumTrackColor="#80AAAAAA"
                    ThumbColor="#26320c"/>
            </Grid>

            <Grid ColumnDefinitions="*,*,*"
                HorizontalOptions="FillAndExpand"
                Margin="0,0, 0, 30">
                <Label Text="Low" 
                    FontSize="Medium"
                    HorizontalOptions="Center"
                    Grid.Column="0"/>
                <Label Text="Medium"
                    FontSize="Medium"
                    HorizontalOptions="Center"
                    Grid.Column="1"/>
                <Label Text="High"
                    FontSize="Medium"
                    HorizontalOptions="Center"
                    Grid.Column="2"/>
            </Grid>

        </VerticalStackLayout>

        <Button 
            x:Name="SaveSettingsBtn"
            Text="Save"
            FontFamily="serif"
            TextColor="#26320c"
            BorderColor="#26320c"
            Clicked="OnSaveSettingsClicked"
            VerticalOptions="End"
            HorizontalOptions="Center"
            Margin="10"
            WidthRequest="250"
            Grid.Row="2"/>

    </Grid>
</ContentPage>
