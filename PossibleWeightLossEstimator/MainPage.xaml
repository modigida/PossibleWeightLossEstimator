                    FontSize="Medium"
                    HorizontalOptions="Center"
                    Grid.Column="4"
                    Margin="0,40,0,0"/>
                
                <BoxView WidthRequest="1"
                    HeightRequest="10"
                    Color="Gray"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    Grid.Column="5"/>
                
                <BoxView WidthRequest="1"
                    HeightRequest="10"
                    Color="Gray"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    Grid.Column="6"/>
                
                <Label Text="15" 
                    FontSize="Medium"
                    HorizontalOptions="Center"
                    Grid.Column="6"
                    Margin="0,40,0,0"/>
                
                <BoxView WidthRequest="1"
                    HeightRequest="10"
                    Color="Gray"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    Grid.Column="7"/>
                
                <BoxView WidthRequest="1"
                    HeightRequest="10"
                    Color="Gray"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    Grid.Column="8"/>
                
                <Label Text="20" 
                    FontSize="Medium"
                    HorizontalOptions="Center"
                    Grid.Column="8"
                    Margin="0,40,0,0"/>
                
                <BoxView WidthRequest="1"
                    HeightRequest="10"
                    Color="Gray"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    Grid.Column="9"/>
                
                <BoxView WidthRequest="1"
                    HeightRequest="10"
                    Color="Gray"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    Grid.Column="10"/>
                
                <Label Text="25" 
                    FontSize="Medium"
                    HorizontalOptions="Center"
                    Grid.Column="10"
                    Margin="0,40,0,0"/>
                
                <BoxView WidthRequest="1"
                    HeightRequest="10"
