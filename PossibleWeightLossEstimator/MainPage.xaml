<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PossibleWeightLossEstimator.MainPage"
             BackgroundColor="WhiteSmoke">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="55"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="55"/>
            </Grid.ColumnDefinitions>
            
            <Label 
                x:Name="DisplayMessage"
                Text="This is my DisplayMessage"
                FontSize="Medium"
                FontFamily="serif"
                TextColor="#26320c"
                Grid.Column="1"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                IsVisible="False"/>
            
            <Button 
                x:Name="EditUserBtn"
                Text="Edit"
                FontFamily="serif"
                TextColor="#26320c"
                BorderColor="#26320c"
                Clicked="OnEditUserClicked"
                Grid.Column="2"
                HorizontalOptions="End"
                Margin="10"
                WidthRequest="55"/>

        </Grid>
        
        <VerticalStackLayout Grid.Row="1" Margin="0,10,0,10" VerticalOptions="CenterAndExpand">
            
            <Label Text="weeks"
                HorizontalOptions="Center"
                FontSize="Medium"
                FontFamily="serif"
                TextColor="#26320c"/>
            
            <Grid ColumnDefinitions="*,*,*,*,*,*,*,*,*,*,*,*,*"
                HorizontalOptions="FillAndExpand"
                VerticalOptions="Center"
                Margin="0,-20,0,20">
                
                <BoxView WidthRequest="1"
                    HeightRequest="10"
                    Color="Gray"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    Grid.Column="0"/>
                
                <Label Text="4" 
                    FontSize="Medium"
                    HorizontalOptions="Center"
                    Grid.Column="0"
                    Margin="0,40,0,0"/>
                
                <BoxView WidthRequest="1"
                    HeightRequest="10"
                    Color="Gray"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    Grid.Column="1"/>
                
                <BoxView WidthRequest="1"
                    HeightRequest="10"
                    Color="Gray"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    Grid.Column="2"/>
                
                <Label Text="12" 
                    FontSize="Medium"
                    HorizontalOptions="Center"
                    Grid.Column="2"
                    Margin="0,40,0,0"/>
                
                <BoxView WidthRequest="1"
                    HeightRequest="10"
                    Color="Gray"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    Grid.Column="3"/>
                
                <BoxView WidthRequest="1"
                    HeightRequest="10"
                    Color="Gray"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    Grid.Column="4"/>
                
                <Label Text="20" 
                    FontSize="Medium"
                    HorizontalOptions="Center"
                    Grid.Column="4"
                    Margin="0,40,0,0"/>
                
                <BoxView WidthRequest="1"
                    HeightRequest="10"
                    Color="Gray"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    Grid.Column="5"/>
                
                <BoxView WidthRequest="1"
                    HeightRequest="10"
                    Color="Gray"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    Grid.Column="6"/>
                
                <Label Text="28" 
                    FontSize="Medium"
                    HorizontalOptions="Center"
                    Grid.Column="6"
                    Margin="0,40,0,0"/>
                
                <BoxView WidthRequest="1"
                    HeightRequest="10"
                    Color="Gray"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    Grid.Column="7"/>
                
                <BoxView WidthRequest="1"
                    HeightRequest="10"
                    Color="Gray"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    Grid.Column="8"/>
                
                <Label Text="36" 
                    FontSize="Medium"
                    HorizontalOptions="Center"
                    Grid.Column="8"
                    Margin="0,40,0,0"/>
                
                <BoxView WidthRequest="1"
                    HeightRequest="10"
                    Color="Gray"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    Grid.Column="9"/>
                
                <BoxView WidthRequest="1"
                    HeightRequest="10"
                    Color="Gray"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    Grid.Column="10"/>
                
                <Label Text="44" 
                    FontSize="Medium"
                    HorizontalOptions="Center"
                    Grid.Column="10"
                    Margin="0,40,0,0"/>
                
                <BoxView WidthRequest="1"
                    HeightRequest="10"
                    Color="Gray"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    Grid.Column="11"/>
                
                <BoxView WidthRequest="1"
                    HeightRequest="10"
                    Color="Gray"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    Grid.Column="12"/>
                
                <Label Text="52" 
                    FontSize="Medium"
                    HorizontalOptions="Center"
                    Grid.Column="12"
                    Margin="0,40,0,0"/>
                
                <Slider x:Name="weekSlider"
                    Minimum="4"
                    Maximum="52"
                    Value="0"
                    ValueChanged="OnSliderWeekChanged"
                    Grid.ColumnSpan="13"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    MinimumTrackColor="#80AAAAAA"
                    ThumbColor="#26320c"
                    WidthRequest="365"/>
            </Grid>


            <Label Text="kg"
                HorizontalOptions="Center"
                FontSize="Medium"
                FontFamily="serif"
                TextColor="#26320c"/>
            
            <Grid ColumnDefinitions="*,*,*,*,*,*,*,*,*,*,*,*,*"
                HorizontalOptions="FillAndExpand"
                VerticalOptions="Center"
                Margin="0,-20,0,20">
                
                <BoxView WidthRequest="1"
                    HeightRequest="10"
                    Color="Gray"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    Grid.Column="0"/>
                
                <Label Text="0" 
                    FontSize="Medium"
                    HorizontalOptions="Center"
                    Grid.Column="0"
                    Margin="0,40,0,0"/>
                
                <BoxView WidthRequest="1"
                    HeightRequest="10"
                    Color="Gray"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    Grid.Column="1"/>
                
